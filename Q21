// Q21: Write a program to display the month name and number of days using switch-case for a given month number.
#include <stdio.h>
int main() {
int month;
printf("Enter month number (1-12) : ");
scanf("%d", &month);
switch(month) {
case 1:  printf("Month %d -> January\t31 days\n", month); break;
case 2:  printf("Month %d -> February\t28 or 29 days\n", month); break;
case 3:  printf("Month %d -> March\t31 days\n", month); break;
case 4:  printf("Month %d -> April\t30 days\n", month); break;
case 5:  printf("Month %d -> May\t31 days\n", month); break;
case 6:  printf("Month %d -> June\t30 days\n", month); break;
case 7:  printf("Month %d -> July\t31 days\n", month); break;
case 8:  printf("Month %d -> August\t31 days\n", month); break;
case 9:  printf("Month %d -> September\t30 days\n", month); break;
case 10: printf("Month %d -> October\t31 days\n", month); break;
case 11: printf("Month %d -> November\t30 days\n", month); break;
case 12: printf("Month %d -> December\t31 days\n", month); break;
default: printf("Month %d -> Invalid Input (Enter 1-12)\n", month);
}
return 0;
}
