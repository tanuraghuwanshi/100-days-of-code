// Q96: Reverse each word in a sentence without changing the word order.
#include <stdio.h>
#include <string.h>
void reverseWord(char *start, char *end) {
char temp;
while (start < end) {
temp = *start;
*start = *end;
*end = temp;
start++;
end--;
}
}
int main() {
char str[1000];
int len;
char *wordStart = NULL;
char *temp = NULL;
printf("Enter a sentence: ");
fgets(str, sizeof(str), stdin);
len = strlen(str);
str[len - 1] = '\0';  
wordStart = NULL;
temp = str;
while (*temp != '\0') {
if (wordStart == NULL && *temp != ' ')
wordStart = temp;  // start of a word
if ((*temp == ' ' || *(temp + 1) == '\0') && wordStart != NULL) {
char *end = (*temp == ' ') ? temp - 1 : temp;
reverseWord(wordStart, end);
wordStart = NULL;
}
temp++;
}
printf("Reversed words: %s\n", str);
return 0;
}
