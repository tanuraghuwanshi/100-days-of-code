// Q38: Write a program to find the sum of digits of a number.
#include <stdio.h>
int main() {
int num, sum = 0, digit;
printf("Enter a number : ");
scanf("%d", &num);
int temp = num;
while(temp != 0) {
digit = temp % 10;
sum += digit;
temp /= 10;
}
printf("Sum of digits of %d = %d\n", num, sum);
return 0;
}
