// Q31: Write a program to take a number as input and print its equivalent binary representation.
#include <stdio.h>
int main() {
int num, temp;
int binary[32];  // array to store binary digits
int i = 0;
printf("Enter a number : ");
scanf("%d", &num);
temp = num;
if(temp == 0) {
printf("Binary of 0 = 0\n");
return 0;
}
while(temp > 0) {
binary[i] = temp % 2;
temp /= 2;
i++;
}
printf("Binary of %d = ", num);
for(int j = i - 1; j >= 0; j--) {
printf("%d", binary[j]);
}
printf("\n");
return 0;
}
