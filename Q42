// Q42: Write a program to check if a number is a perfect number.
#include <stdio.h>
int main() {
int num, i, sum = 0;
printf("Enter a number : ");
scanf("%d", &num);
for(i = 1; i <= num / 2; i++) {
if(num % i == 0) {
sum += i;
}
}
if(sum == num && num != 0) {
printf("Number: %d\tIt is a Perfect Number\n", num);
} else {
printf("Number: %d\tIt is Not a Perfect Number\n", num);
}
return 0;
}
