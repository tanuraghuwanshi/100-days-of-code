// Q79: Perform diagonal traversal of a matrix.
#include <stdio.h>
int main() {
    int m, n;
    printf("Enter number of rows and columns: ");
    scanf("%d %d", &m, &n);

    int matrix[m][n];
    printf("Enter elements of the matrix:\n");
    for(int i = 0; i < m; i++)
        for(int j = 0; j < n; j++)
            scanf("%d", &matrix[i][j]);

    printf("Diagonal traversal:\n");
    for(int d = 0; d < n; d++) {
        int i = 0, j = d;
        while(i < m && j >= 0) {
            printf("%d ", matrix[i][j]);
            i++;
            j--;
        }
        printf("\n");
    }
    for(int d = 1; d < m; d++) {
        int i = d, j = n - 1;
        while(i < m && j >= 0) {
            printf("%d ", matrix[i][j]);
            i++;
            j--;
        }
        printf("\n");
    }

    return 0;
}
