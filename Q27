// Q27: Write a program to print the sum of the first n odd numbers.
#include <stdio.h>
int main() {
int n, i, sum = 0, odd;
printf("Enter value of n : ");
scanf("%d", &n);
printf("First %d odd numbers : ", n);
for(i = 1; i <= n; i++) {
odd = 2 * i - 1;      // formula for odd number
printf("%d ", odd);
sum += odd;
}
printf("\nSum of first %d odd numbers = %d\n", n, sum);
return 0;
}
